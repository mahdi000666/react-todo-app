pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                bat 'npm ci --prefer-offline'
            }
        }
        
        stage('Build (parallel)') {
            parallel {
                stage('Build Node18') {
                    steps {
                        script {
                            def commit = env.GIT_COMMIT.take(7)
                            bat "docker build --build-arg NODE_VERSION=18 -t react-dev-node18:${commit} ."
                        }
                    }
                }
                stage('Build Node20') {
                    steps {
                        script {
                            def commit = env.GIT_COMMIT.take(7)
                            bat "docker build --build-arg NODE_VERSION=20 -t react-dev-node20:${commit} ."
                        }
                    }
                }
            }
        }
        
        stage('Run Docker') {
            steps {
                script {
                    def commit = env.GIT_COMMIT.take(7)
                    bat "docker run -d -p 8080:80 --name react_dev_${BUILD_NUMBER} react-dev-node20:${commit}"
                    bat 'timeout /t 5 /nobreak'
                }
            }
        }
        
        stage('Smoke Test') {
            steps {
                bat 'call smoke-test.bat'
                archiveArtifacts artifacts: 'smoke.log', allowEmptyArchive: true
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                bat 'echo Build completed > build.log'
                archiveArtifacts artifacts: 'dist/**,build.log,smoke.log', allowEmptyArchive: true
            }
        }
        
        stage('Cleanup') {
            steps {
                bat "docker stop react_dev_${BUILD_NUMBER} || exit 0"
                bat "docker rm react_dev_${BUILD_NUMBER} || exit 0"
            }
        }
    }
    
    post {
        always {
            bat 'docker stop react_dev_%BUILD_NUMBER% || exit 0'
            bat 'docker rm react_dev_%BUILD_NUMBER% || exit 0'
        }
    }
}